<main style="display: flex; justify-content: center; align-content: center; margin-top: 150px;">
    <div class="card" style="width: 1000px;">
        <div class="card-body">
            <section class="login-block">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 login-sec">
                            <h2 class="text-center text-secondary mt-2">Login</h2>
                            <br>
                            <form class="login-form">
                                <div class="form-group mt-2">
                                    <label for="Email">Email: </label>
                                    <input type="email" class="form-control" name=email aria-describedby="emailHelp"
                                        placeholder="ex. newcenter@contato.com" required>
                                </div>
                                <div class="form-group mt-2">
                                    <label for="senha">Senha:</label>
                                    <input type="password" class="form-control" name=senha placeholder="ex. senha"><br>
                                </div>

                                <button type="submit" class="btn btn-primary" style="width: 100%;">Logar</button>

                            </form>
                        </div>
                        <div class="col-md-8 banner-sec">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid"
                                    src="http://sindcomerciarios.org.br/wp-content/uploads/2020/11/001.jpg"
                                    alt="First slide" style="margin-left: 10px; border-radius: 3px;">
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    </div>
    </section>
</main>